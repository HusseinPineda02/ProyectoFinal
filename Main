package Hospital;

import java.util.Date;

public class Main {
    public static void main(String[] args) {
        Medicamento med1 = new Medicamento(1, "Ibuprofeno", 100, "Antiinflamatorio");
        Medicamento med2 = new Medicamento(2, "Paracetamol", 80, "Analgésico");

        Medicamento[] lista = {med1, med2};
        Farmacia farmacia = new Farmacia(101, lista);
        farmacia.mostrarInventario();

        Receta receta = new Receta(1, "Ibuprofeno", 100, "Antiinflamatorio",
                                   2001, "Dr. López", new Date(), "Juan Pérez", "Tomar cada 8 horas");
        receta.mostrarReceta();

        Factura factura = new Factura(3001, "Efectivo", 25.50, new Date());
        factura.mostrarDatosPago();
    }
}
