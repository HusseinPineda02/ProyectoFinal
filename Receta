package Hospital;

import java.util.Date;

public class Receta extends Medicamento {
    private int idReceta;
    private String doctor;
    private Date fechaReceta;
    private String paciente;
    private String indicaciones;

    public Receta(int idMedicamento, String nombreMedicamento, int stock, String descripcion,
                  int idReceta, String doctor, Date fechaReceta, String paciente, String indicaciones) {
        super(idMedicamento, nombreMedicamento, stock, descripcion);
        this.idReceta = idReceta;
        this.doctor = doctor;
        this.fechaReceta = fechaReceta;
        this.paciente = paciente;
        this.indicaciones = indicaciones;
    }

    public void mostrarReceta() {
        System.out.println("=== RECETA MÃ‰DICA ===");
        System.out.println("ID Receta: " + idReceta);
        System.out.println("Doctor: " + doctor);
        System.out.println("Paciente: " + paciente);
        System.out.println("Medicamento: " + nombreMedicamento);
        System.out.println("Indicaciones: " + indicaciones);
    }

    public void generarReceta() {
        System.out.println("Receta generada correctamente.");
    }

    public void eliminarReceta() {
        System.out.println("Receta eliminada del sistema.");
    }

    public void modificarIndicaciones(String nuevasIndicaciones) {
        this.indicaciones = nuevasIndicaciones;
    }

    public int getIdReceta() { return idReceta; }
    public String getDoctor() { return doctor; }
    public Date getFechaReceta() { return fechaReceta; }
    public String getPaciente() { return paciente; }
    public String getIndicaciones() { return indicaciones; }
}
