package Hospital;

public class Medicamento {
    protected int id;
    protected String nombreMedicamento;
    protected int stock;
    protected String descripcion;

    public Medicamento(int id, String nombre, int stock, String descripcion) {
        this.id = id;
        this.nombreMedicamento = nombre;
        this.stock = stock;
        this.descripcion = descripcion;
    }

    public void actualizarMedicamento(String nuevaDescripcion) {
        this.descripcion = nuevaDescripcion;
    }

    public void aumentarStock(int cantidad) {
        this.stock += cantidad;
    }

    public void reducirStock(int cantidad) {
        if (stock >= cantidad) {
            this.stock -= cantidad;
        } else {
            System.out.println("Stock insuficiente.");
        }
    }

    public void cambiarNombre(String nuevoNombre) {
        this.nombreMedicamento = nuevoNombre;
    }

    public int getId() { return id; }
    public String getNombreMedicamento() { return nombreMedicamento; }
    public int getStock() { return stock; }
    public String getDescripcion() { return descripcion; }
}
