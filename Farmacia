package Hospital;

public class Farmacia {
    private int id;
    private Medicamento[] medicamentos;

    public Farmacia(int id, Medicamento[] medicamentos) {
        this.id = id;
        this.medicamentos = medicamentos;
    }

    public void mostrarInventario() {
        System.out.println("Inventario de la farmacia #" + id + ":");
        for (Medicamento m : medicamentos) {
            System.out.println(" - " + m.getNombreMedicamento() + " (Stock: " + m.getStock() + ")");
        }
    }

    public int getId() { return id; }
    public Medicamento[] getMedicamentos() { return medicamentos; }
}
