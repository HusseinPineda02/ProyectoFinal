package Hospital;

public class Inventario {
    private int id;
    private String tipoObjeto;
    private int existencias;

    public Inventario(int id, String tipoObjeto, int existencias) {
        this.id = id;
        this.tipoObjeto = tipoObjeto;
        this.existencias = existencias;
    }

    public void mostrarInventario() {
        System.out.println("Inventario ID: " + id + " | Tipo: " + tipoObjeto + " | Existencias: " + existencias);
    }

    public void actualizarInventario(int cantidad) {
        this.existencias += cantidad;
    }

    public int getId() { return id; }
    public String getTipoObjeto() { return tipoObjeto; }
    public int getExistencias() { return existencias; }
}
